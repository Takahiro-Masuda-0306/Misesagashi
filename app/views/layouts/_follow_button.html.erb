<%# レストラン一覧表示の時に用いるいいね！ボタン %>
<div class="follow-button mb-3">
<% if current_user.followings?(restaurant) %>
  <%= form_with(model: current_user.likes.find_by(restaurant_id: restaurant.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :restaurant_id, restaurant.id %>
    <button type="submit" class="btn btn-danger btn-block">いいね！解除</button>
  <% end %>
  
<% else %>
  <%= form_with(model: current_user.likes.build, local: true) do |f| %>
    <%= hidden_field_tag :restaurant_id, restaurant.id %>
    <button type="submit" class="btn btn-success btn-block">いいね！<i class="far fa-thumbs-up mr-1 ml-1"></i>する</button>
  <% end %>

<% end %>
</div>