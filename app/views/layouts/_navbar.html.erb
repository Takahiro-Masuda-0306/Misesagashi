<div class="mb-4">
  
<% if logged_in? %>
  <%# ログイン時のナビゲーションバー %>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <%= link_to 'ミセサガシ', toppages_index_path, class: 'navbar-brand' %>
      
      <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#nav-bar">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div id="nav-bar" class="navbar-collapse collapse justify-content-end">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="<%= users_path %>">User一覧</a></li>
          <li class="nav-item"><a class="nav-link" href="<%= toppages_show_path %>">このサイトについて</a></li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown"><%= current_user.name %></a>
            <div class="dropdown-menu">
              <%= link_to 'Profile', user_path(current_user), class: 'dropdown-item' %>
              <a class="dropdown-item" href="<%= approvings_user_path(current_user) %>">お気に入り一覧<span class="badge badge-secondary ml-2"><%= count_approvings(current_user) %></span></a>
              <%= link_to 'ログアウト', logout_path(current_user),method: :delete, class: 'dropdown-item' %>
            </div>
          </li>
        </ul>
      </div>
    </nav>
    
<% else %> 
  <%# 非ログイン時のナビゲーションバー %>
    <nav class="navbar navbar-expand-sm navbar-light bg-light">
      <%= link_to 'ミセサガシ', toppages_index_path, class: 'navbar-brand' %>
      
      <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#nav-bar">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div id="nav-bar" class="navbar-collapse collapse justify-content-end">
        <ul class="navbar-nav">
          <li class="nav-item"><%= link_to 'このサイトについて', toppages_show_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to '新規登録', users_new_path, class: 'nav-link' %></li>
        </ul>
      </div>
    </nav>
  
<% end %>
</div>